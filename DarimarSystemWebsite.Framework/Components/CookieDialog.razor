@inherits DarimarSystemDialog
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Cookie Consent</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>We use cookies to improve your experience by saving your preferences.</MudText>
        <MudText>It is recommended to allow the use of cookies for the best experience.</MudText>
        <MudText>If you would like to choose again at a later time, you can use the reset cookies button from the bottom of the page.</MudText>
        <div style="min-height:20px" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="DenyCookies" Color="Color.Primary" Variant="Variant.Outlined" Class="mr-3 mb-1">Deny</MudButton>
        <MudButton OnClick="AllowCookies" Color="Color.Primary" Variant="Variant.Filled" Class="mr-3 mb-1">Allow</MudButton>
    </DialogActions>
</MudDialog>
