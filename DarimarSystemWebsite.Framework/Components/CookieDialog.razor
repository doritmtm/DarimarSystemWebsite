@inherits DarimarSystemDialog
<MudDialog OnBackdropClick="CloseDialog">
    <TitleContent>
        <MudText Typo="Typo.h6">@DarimarSystemService.GetLocalizedString("FrameworkCookieUsageTitle")</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@DarimarSystemService.GetLocalizedString("FrameworkCookieUsageExplainer")</MudText>
        <MudText>@DarimarSystemService.GetLocalizedString("FrameworkCookieUsageRecommendation")</MudText>
        <MudText>@DarimarSystemService.GetLocalizedString("FrameworkCookieUsageResetExplainer")</MudText>
        <div style="min-height:20px" />
    </DialogContent>
    <DialogActions>
        <LanguageSwitcher Class="ml-3 mb-1" />
        <MudSpacer />
        <MudButton OnClick="DenyCookies" Color="Color.Primary" Variant="Variant.Outlined" Class="mr-3 mb-1">@DarimarSystemService.GetLocalizedString("FrameworkDeny")</MudButton>
        <MudButton OnClick="AllowCookies" Color="Color.Primary" Variant="Variant.Filled" Class="mr-3 mb-1">@DarimarSystemService.GetLocalizedString("FrameworkAllow")</MudButton>
    </DialogActions>
</MudDialog>
