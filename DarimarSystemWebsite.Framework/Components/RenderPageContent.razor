@inherits DarimarSystemComponent

@{ #pragma warning disable CSS024 }

@if (PageDefinitions?.PreRenderingContent != null && IsPreRendering)
{
    @PageDefinitions?.PreRenderingContent.ChildContent
}
else if (ReadyToRender())
{
    <MudContainer Class="@("px-8 py-4 " + PageDefinitions?.PageContent?.Class)" MaxWidth="@(PageDefinitions?.PageContent?.MaxWidth ?? MaxWidth.Large)" Style="@("min-height:88vh;" + PageDefinitions?.PageContent?.Style)">
        @PageDefinitions?.PageContent?.ChildContent
    </MudContainer>
}
else
{
    <PageLoading />
}

<ServiceHelperFinishComponent />
