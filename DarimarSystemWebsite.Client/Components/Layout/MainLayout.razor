@inherits DarimarSystemLayout

<ServiceHelperComponent />

<MudThemeProvider Theme="@_theme" IsDarkMode="_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class="px-2" Style="overflow-x:auto;overflow-y:hidden">
        @{
            string darimarSystemLogoSvg = $"darimar-system-{(_isDarkMode ? "light" : "dark")}-high-res-logo-transparent.svg";
        }
        <MudImage Src="@darimarSystemLogoSvg" Width="120" Height="60"></MudImage>
        <InteractiveComponent>
            <NavButton Href="/" Class="ml-3">Home</NavButton>
        </InteractiveComponent>
        <InteractiveComponent>
            <NavButton Href="/counter" Class="ml-3">Counter</NavButton>
        </InteractiveComponent>
        <InteractiveComponent>
            <NavButton Href="/weather" Class="ml-3">Weather</NavButton>
        </InteractiveComponent>
        <MudSpacer />
        <div style="min-width:40px"/>
        <InteractiveComponent>
            <LanguageSwitcher />
        </InteractiveComponent>
        <InteractiveComponent>
            <MudIconButton Icon="@(DarkLightModeButtonIcon)" Color="Color.Inherit" OnClick="@DarkModeToggle" />
        </InteractiveComponent>
        @RawHTML.SeparateByNbspChars(2)
    </MudAppBar>
    <MudMainContent Style="height:100%">
        <MudContainer Class="px-8 py-4" MaxWidth="MaxWidth.Large" Style="min-height:88vh;">
            @Body
            <ServiceHelperFinishComponent />
        </MudContainer>
    </MudMainContent>
    <MudDivider />
    <MudAppBar Bottom="true" Fixed="false" Elevation="0" Class="px-2" Style="overflow-x:auto;overflow-y:hidden">
        <InteractiveComponent>
            <ResetCookiesButton />
        </InteractiveComponent>
        <MudSpacer />
        <div style="min-width:40px" />
        <MudText Style="text-wrap:nowrap">© Copyright Darimar System SRL @DateTime.Now.ToString("yyyy")</MudText>
        @RawHTML.SeparateByNbspChars(20)
    </MudAppBar>
    <CookieDialog @ref="CookieDialog"/>
    <MudScrollToTop Style="z-index:2000">
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.KeyboardArrowUp" />
    </MudScrollToTop>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
