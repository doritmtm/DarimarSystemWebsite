@inject IConfiguration Configuration
@inject IServerApp ServerApp

@{
    string? version = Configuration["Version"];
    ServerApp.Initialize();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <link rel="stylesheet" href="_content/MudBlazor/MudBlazor.min.css" />
    <link rel="stylesheet" href="DarimarSystemWebsite.styles.css?vers=@version" />
    <link rel="icon" type="image/png" href="favicon.ico?vers=@version" />
    <HeadOutlet @rendermode="StaticSettings.GlobalRenderMode" />
</head>

<body style="height:100vh">
    <Routes @rendermode="StaticSettings.GlobalRenderMode" />
    <script src="_framework/blazor.web.js?vers=@version"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <script>
        window.blazorCulture = {
            get: () => window.localStorage['BlazorCulture'],
            set: (value) => window.localStorage['BlazorCulture'] = value
        };
    </script>
</body>

</html>
